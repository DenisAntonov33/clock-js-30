.container
	width 100%
	height 960px
	padding 0
	background-image url('../img/kurants.jpg')
	filter blur(10px)
	background-repeat no-repeat
	background-size cover
	background-color red
		
.clock
	display inline-block
	position absolute
	width 500px
	height 500px
	border 20px solid transparent
	border-radius 100%
	text-align center
	filter blur(0)
	top 0
	left 0
	right 0
	bottom 0
	margin auto
	box-shadow 0 0 0 20px gold,
				0 0 0 25px #6b6b40

	
.hand
	position absolute
	background-color gold
	top 50%
	transform-origin 100%
	transform rotate(90deg)
	transition all 0.05s
	transition-timing-function cubic-bezier(0, 2.19, 1, 1)
	
.hour
	width 30%
	height 10px
	left 20%

	
.min
	height 5px
	width 50%
	
.sec
	height 5px
	width 50%
	background-color red